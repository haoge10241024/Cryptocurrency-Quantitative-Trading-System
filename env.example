# 环境变量配置示例文件
# 请复制此文件为 .env 并填入您的实际API信息

# OKX交易所API配置
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here

# 系统配置
DEBUG_MODE=true
LOG_LEVEL=INFO

# 交易配置
SANDBOX_MODE=false
DEFAULT_RISK_PERCENT=2
MAX_POSITIONS=5
MIN_SCORE_THRESHOLD=8.5

# 报告配置
REPORT_FORMAT=both  # txt, excel, both
AUTO_OPEN_REPORTS=true 